						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/powermenu_title"
						android:textColor="@color/ancient_powermenu_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:paddingTop="@dimen/ancient_settings_cardview_padding"
			android:paddingLeft="@dimen/ancient_settings_cardview_padding"
			android:paddingRight="@dimen/ancient_settings_cardview_padding"
			android:baselineAligned="false"
			android:orientation="horizontal">

			<androidx.cardview.widget.CardView
