<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:paddingTop="@dimen/ancient_settings_cardview_padding"
	android:paddingLeft="@dimen/ancient_settings_cardview_padding"
	android:paddingRight="@dimen/ancient_settings_cardview_padding"
	android:baselineAligned="false"
	android:orientation="horizontal">
	
			<androidx.cardview.widget.CardView
				android:id="@+id/navigation_card"
				android:layout_width="match_parent"
				android:layout_height="@dimen/ancient_settings_cardview_about_height"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_navigation_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">
        
        <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg7" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.2" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="horizontal">

					<ImageView
						android:layout_width="30dp"
						android:layout_height="match_parent"
				    	android:src="@drawable/ic_settings_navigation" />
					
					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
					    android:layout_marginLeft="20dp"
					    android:gravity="left|center"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="20dp"  
							android:text="@string/navigation_title"
							android:textColor="@color/ancient_navigation_color"
							style="@style/ancient_cardview_text_primary" />
						
						<TextView
							android:layout_width="wrap_content"
							android:textSize="14dp"  
							android:layout_height="wrap_content"
							android:text="@string/navi_sum"
							android:textColor="@color/ancient_navigation_color"
							style="@style/ancient_cardview_text_primary" />
							
				    </LinearLayout>
					
				</LinearLayout>	
			</androidx.cardview.widget.CardView>
</LinearLayout>
