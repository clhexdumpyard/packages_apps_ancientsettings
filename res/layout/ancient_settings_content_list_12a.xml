<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:paddingTop="@dimen/ancient_settings_cardview_padding"
	android:paddingLeft="@dimen/ancient_settings_cardview_padding"
	android:paddingRight="@dimen/ancient_settings_cardview_padding"
	android:baselineAligned="false"
	android:orientation="horizontal">
	
			<androidx.cardview.widget.CardView
				android:id="@+id/lockscreen_card"
				android:layout_width="match_parent"
				android:layout_height="@dimen/ancient_settings_cardview_about_height"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_lockscreen_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">
        
        <ViewFlipper 
		  android:gravity="center" 
		  android:layout_width="fill_parent" 
		  android:layout_height="fill_parent" 
		  android:flipInterval="300" 
		  android:autoStart="true">
                  <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.1" />
                 <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent"  
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.15" />
                 <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.2" />
                 <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.20" />
                <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.20" />
                <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.20" />
                <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.20" />
               <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.20" />
                <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent"  
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.2" />
                <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent"  
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.15" />
                 <ImageView 
			   android:gravity="center" 
			   android:layout_width="fill_parent" 
			   android:layout_height="fill_parent" 
			   android:src="@drawable/cardimg12" 
			   android:scaleType="centerCrop" 
			   android:tint="?android:attr/textColorSecondary" 
			   android:alpha="0.1" />
                </ViewFlipper>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_lockscreen" >
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/lockscreen_title"
						android:textColor="@color/ancient_lockscreen_color"
						style="@style/ancient_cardview_text_primary"
						android:paddingTop="13dp" >
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
</LinearLayout>
