<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?android:attr/colorPrimary"
	tools:context="com.ancient.settings.AncientSettings">

	<!-- Dashboard Title -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="25dp"
		android:layout_marginStart="25dp"
		android:layout_marginEnd="25dp"
		android:orientation="vertical">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ancient_settings_title"
			style="@style/ancient_cardview_text_primary"
			android:textSize="28sp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ancient_settings_summary"
			style="@style/ancient_cardview_text_secondary"
			android:textSize="20sp"
			android:layout_marginBottom="25dp"/>

<!-- Main Preferences -->
<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="1"
    android:columnCount="1"
    android:alignmentMode="alignMargins"
    android:layout_gravity="center_horizontal"
    android:columnOrderPreserved="false">

	<!-- About Card -->
	<androidx.cardview.widget.CardView
		android:id="@+id/megalith_about_card"
		android:layout_width="@dimen/ancient_settings_cardview_about_width"
		android:layout_height="@dimen/ancient_settings_cardview_about_height"
		android:layout_margin="@dimen/ancient_settings_cardview_margin"
		app:cardBackgroundColor="@color/ancient_interface_cardcolor"
		app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
		app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">
		<LinearLayout
			android:id="@+id/megalith_bg_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/megalith_bg_anim"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
               	android:layout_marginLeft="20dp"
				android:orientation="vertical"
				android:gravity="left|center">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/about_title"
					android:textColor="@color/ancient_about_color"
					android:textSize="15dp"
					style="@style/ancient_cardview_text_secondary"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/about_summary"
					android:textColor="@color/ancient_about_color"
					android:textSize="20dp"
					style="@style/ancient_cardview_text_primary"/>
            </LinearLayout>
			<LinearLayout
                android:layout_width="wrap_content"
               	android:layout_height="wrap_content"
              	android:orientation="vertical"
               	android:layout_gravity="center">
                <ImageView
                   		android:layout_width="75dp"
						android:layout_height="75dp"
                   		android:src="@drawable/about_ancientsettings"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>

    <!-- Main Preferences -->
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:rowCount="6"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:layout_gravity="center_horizontal"
        android:columnOrderPreserved="false">

			<androidx.cardview.widget.CardView
			android:id="@+id/interface_card"
			android:layout_width="@dimen/ancient_settings_cardview_width"
			android:layout_height="@dimen/ancient_settings_cardview"
			android:layout_margin="@dimen/ancient_settings_cardview_margin"
			app:cardBackgroundColor="@color/ancient_interface_cardcolor"
			app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
			app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
				    	android:src="@drawable/ic_settings_interface">
					</ImageView>

					<TextView
						android:id="@+id/interface_cardtitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/interface_title"
						android:textColor="@color/ancient_interface_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/statusbar_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_statusbar_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"                                
						android:src="@drawable/ic_settings_statusbar">
					</ImageView>

					<TextView
						android:id="@+id/cardqstitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/statusbar_title"
						android:textColor="@color/ancient_statusbar_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/notification_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_notification_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_notifications">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/notifications_title"
						android:textColor="@color/ancient_notification_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>

				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/quicksettings_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_quicksettings_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_quicksettings" >
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/quicksettings_title"
						android:textColor="@color/ancient_quicksettings_color"
						style="@style/ancient_cardview_text_primary"
						android:paddingTop="13dp" >
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
			android:id="@+id/gesture_card"
			android:layout_width="@dimen/ancient_settings_cardview_width"
			android:layout_height="@dimen/ancient_settings_cardview"
			android:layout_margin="@dimen/ancient_settings_cardview_margin"
			app:cardBackgroundColor="@color/ancient_gesture_cardcolor"
			app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
			app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_gesture">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/gestures_title"
						android:textColor="@color/ancient_gesture_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/powermenu_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_powermenu_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_powermenu">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/powermenu_title"
						android:textColor="@color/ancient_powermenu_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/navigation_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_navigation_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"	
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_navigation">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/navigation_title"
						android:textColor="@color/ancient_navigation_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				 </LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/animations_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_animation_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_animation">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/animations_title"
						android:textColor="@color/ancient_animation_color"
						style="@style/ancient_cardview_text_primary"
						android:paddingTop="13dp">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/button_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_button_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"	
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_buttons">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/buttons_title"
						android:textColor="@color/ancient_button_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				 </LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/battery_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_about_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_batterysave">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/battery_title"
						android:textColor="@color/ancient_about_color"
						style="@style/ancient_cardview_text_primary"
						android:paddingTop="13dp">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/misc_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_misc_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"	
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_misc">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/misc_title"
						android:textColor="@color/ancient_misc_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				 </LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/lockscreen_card"
				android:layout_width="@dimen/ancient_settings_cardview_width"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_lockscreen_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_lockscreen" >
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/lockscreen_title"
						android:textColor="@color/ancient_lockscreen_color"
						style="@style/ancient_cardview_text_primary"
						android:paddingTop="13dp" >
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

	</GridLayout>
</LinearLayout>
</ScrollView>
