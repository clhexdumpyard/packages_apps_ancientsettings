<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="wrap_content"
	android:layout_width="match_parent"
	android:paddingTop="@dimen/ancient_settings_cardview_padding"
	android:paddingLeft="@dimen/ancient_settings_cardview_padding"
	android:paddingRight="@dimen/ancient_settings_cardview_padding"
	android:baselineAligned="false"
	android:orientation="horizontal">

			<androidx.cardview.widget.CardView
			android:id="@+id/gesture_card"
			android:layout_width="match_parent"
			android:layout_height="@dimen/ancient_settings_cardview"
			android:layout_weight="1"
			android:layout_margin="@dimen/ancient_settings_cardview_margin"
			app:cardBackgroundColor="@color/ancient_gesture_cardcolor"
			app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
			app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_gesture">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/gestures_title"
						android:textColor="@color/ancient_gesture_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/powermenu_card"
				android:layout_width="match_parent"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_weight="1"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_powermenu_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
						android:src="@drawable/ic_settings_powermenu">
					</ImageView>

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/powermenu_title"
						android:textColor="@color/ancient_powermenu_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>