						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/navigation_title"
						android:textColor="@color/ancient_navigation_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				 </LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/animations_card"
				android:layout_width="match_parent"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_weight="1"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_animation_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
