<androidx.core.widget.NestedScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.ancient.settings.AncientSettings"
	app:layout_behavior="com.ancient.nabil_aba.overscroll.OverScrollBounceBehavior">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

	<!-- Dashboard Title -->
	<LinearLayout
		android:id="@+id/megalith_header"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="25dp"
		android:layout_marginStart="25dp"
		android:layout_marginEnd="25dp"
		android:orientation="vertical">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ancient_settings_title"
			style="@style/ancient_cardview_text_primary"
			android:textSize="28sp"/>
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ancient_settings_summary"
			style="@style/ancient_cardview_text_secondary"
			android:textSize="20sp"
			android:layout_marginBottom="25dp"/>
	</LinearLayout>

	<include layout="@layout/ancient_settings_list_noanim"/>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
