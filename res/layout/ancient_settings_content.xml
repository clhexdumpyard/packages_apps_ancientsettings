<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@id/megalith_header">

	<LinearLayout
		android:id="@+id/megalith_about_card_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="@dimen/ancient_settings_cardview_padding"
		android:paddingLeft="@dimen/ancient_settings_cardview_padding"
		android:paddingRight="@dimen/ancient_settings_cardview_padding"
		android:baselineAligned="false"
		android:orientation="horizontal">

	<!-- About Card -->
	<androidx.cardview.widget.CardView
		android:id="@+id/megalith_about_card"
		android:layout_width="match_parent"
		android:layout_height="@dimen/ancient_settings_cardview_about_height"
		android:layout_margin="@dimen/ancient_settings_cardview_margin"
		app:cardBackgroundColor="@color/ancient_interface_cardcolor"
		app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
		app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">
		<LinearLayout
			android:id="@+id/megalith_bg_anim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/megalith_bg_anim"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
               	android:layout_marginLeft="20dp"
				android:orientation="vertical"
				android:gravity="left|center">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/about_title"
					android:textColor="@color/ancient_about_color"
					android:textSize="15dp"
					style="@style/ancient_cardview_text_secondary"/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/about_summary"
					android:textColor="@color/ancient_about_color"
					android:textSize="20dp"
					style="@style/ancient_cardview_text_primary"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

<LinearLayout
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:layout_below="@id/megalith_about_card_container">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:paddingTop="@dimen/ancient_settings_cardview_padding"
			android:paddingLeft="@dimen/ancient_settings_cardview_padding"
			android:paddingRight="@dimen/ancient_settings_cardview_padding"
			android:baselineAligned="false"
			android:orientation="horizontal">

			<androidx.cardview.widget.CardView
			android:id="@+id/interface_card"
			android:layout_width="match_parent"
			android:layout_height="@dimen/ancient_settings_cardview"
			android:layout_weight="1"
			android:layout_margin="@dimen/ancient_settings_cardview_margin"
			app:cardBackgroundColor="@color/ancient_interface_cardcolor"
			app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
			app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"
				    	android:src="@drawable/ic_settings_interface">
					</ImageView>

					<TextView
						android:id="@+id/interface_cardtitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/interface_title"
						android:textColor="@color/ancient_interface_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>

			<androidx.cardview.widget.CardView
				android:id="@+id/statusbar_card"
				android:layout_width="match_parent"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_weight="1"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_statusbar_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_marginLeft="20dp"
					android:gravity="left|center"
					android:orientation="vertical">

					<ImageView
						android:layout_width="45dp"
						android:layout_height="45dp"
						android:paddingTop="5dp"                                
						android:src="@drawable/ic_settings_statusbar">
					</ImageView>

					<TextView
						android:id="@+id/cardqstitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingTop="13dp"
						android:text="@string/statusbar_title"
						android:textColor="@color/ancient_statusbar_color"
						style="@style/ancient_cardview_text_primary">
					</TextView>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:paddingTop="@dimen/ancient_settings_cardview_padding"
			android:paddingLeft="@dimen/ancient_settings_cardview_padding"
			android:paddingRight="@dimen/ancient_settings_cardview_padding"
			android:baselineAligned="false"
			android:orientation="horizontal">

			<androidx.cardview.widget.CardView
				android:id="@+id/notification_card"
				android:layout_width="match_parent"
				android:layout_height="@dimen/ancient_settings_cardview"
				android:layout_weight="1"
				android:layout_margin="@dimen/ancient_settings_cardview_margin"
				app:cardBackgroundColor="@color/ancient_notification_cardcolor"
				app:cardCornerRadius="@dimen/ancient_settings_cardview_cornerRadius"
				app:cardElevation="@dimen/ancient_settings_cardview_cardElevation">

