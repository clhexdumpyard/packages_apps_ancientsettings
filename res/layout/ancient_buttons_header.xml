<androidx.constraintlayout.widget.ConstraintLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_marginTop="25dp"
	android:layout_marginStart="25dp"
	android:layout_width="match_parent"
	android:background="?android:attr/colorPrimary"
	android:layout_height="wrap_content"
	tools:context="com.ancient.settings.AncientSettings">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/buttons_title"
				style="@style/ancient_cardview_text_primary"
				android:textSize="28sp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/buttons_summary"
				style="@style/ancient_cardview_text_secondary"
				android:textSize="20sp"/>
			</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>